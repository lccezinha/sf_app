<div class='container'>
  <div class='row'>
    <div class='.col-md-9'>
      <div class='well'>
        <%= form_tag '/leads', method: :post, class: 'form-horizontal' do %>
          <div class='form-group'>
            <%= label_tag :first_name %>
            <%= text_field_tag :first_name %>
          </div>
          <div class='form-group'>
            <%= label_tag :last_name %>
            <%= text_field_tag :last_name %>
          </div>
          <div class='form-group'>
            <%= label_tag :company %>
            <%= text_field_tag :company %>
          </div>
          <div class='form-group'>
            <%= label_tag :job_title %>
            <%= text_field_tag :job_title %>
          </div>
          <div class='form-group'>
            <%= label_tag :email %>
            <%= text_field_tag :email %>
          </div>
          <div class='form-group'>
            <%= label_tag :website %>
            <%= text_field_tag :website %>
          </div>
          <div class='form-group'>
            <%= label_tag :phone %>
            <%= text_field_tag :phone %>
          </div>
          <div class='panel-footer'>
            <%= submit_tag 'Create' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
